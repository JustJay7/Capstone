      "primary_models": ["xBD"],
      "alternate_models": ["YOLOv8", "DETR"],
      "clip_text_prompts": [
        "aerial photograph of damaged buildings with collapsed roofs and debris scattered around",
        "overhead view of disaster zone showing destroyed buildings, rubble piles, and structural failures",
        "satellite image of post-earthquake building damage with missing roofs and walls",
        "drone image of flattened structures and demolished buildings after natural disaster",
        "orthophoto of damaged urban area with visible building destruction and emergency response",
        "aerial disaster monitoring image showing rooftop damage and debris fields",
        "high-altitude reconnaissance of post-disaster building destruction"
      ],
      "florence_positive_markers": [
        "collapsed",
        "damaged",
        "debris",
        "rubble",
        "disaster",
