        "weather map"
      ],
      "object_markers": [
        "building",
        "truck",
        "car",
        "person",
        "debris"
      ],
      "user_hint_keywords": [
        "disaster",
        "building damage",
        "collapsed building",
        "earthquake damage",
        "flood damage",
        "disaster assessment",
        "emergency response",
        "post-disaster",
        "rubble",
        "debris",
        "satellite damage",
        "building collapse",
        "urban damage",
        "infrastructure failure"
      ],
      "routing_policy": {
        "min_clip_conf": 0.20,
        "min_florence_hits": 2,
        "fusion_weights": {
          "clip": 0.35,
          "florence": 0.30,
          "yolo": 0.20,
          "bart": 0.15
        },
        "boost_rules": [
          {
            "if_hint_contains_any": ["disaster", "earthquake", "collapsed", "damage", "rubble"],
            "boost_intent_by": 2.0
          },
          {
            "if_caption_contains_any": ["collapsed", "debris", "rubble", "disaster", "building"],
            "boost_intent_by": 1.5
          }
        ],
        "negative_boost_rules": [
          {
            "if_caption_contains_any": ["intact building", "undamaged", "normal cityscape", "medical", "forest"],
            "reduce_intent_by": 2.0
          }
        ],
        "tie_breaker": [
          "has_primary_model",
          "higher_clip_conf",
          "higher_positive_hits"
        ]
      },
      "disambiguation": {
        "often_confused_with": [
          "satellite-environmental-analysis",
          "generic-object-detection"
        ],
        "separators": {
          "this_intent_visual_traits": [
            "buildings visibly damaged or collapsed",
            "debris, rubble, or missing roofs",
            "aerial or overhead perspective",
            "clear signs of disaster impact"
          ],
          "other_intent_visual_traits": [
            "intact structures or undamaged landscapes",
            "generic satellite imagery without destruction",
            "environmental or vegetation scenes"
          ]
        }
      },
      "input_requirements": {
        "modality": "rgb",
        "formats": ["jpg", "png", "tif"],
        "notes": "Typically aerial or satellite RGB images; may include pre/post disaster comparisons."
      },
      "expected_output": {
        "type": "classification",
        "schema_notes": "Per-building damage class: no damage, minor, major, destroyed; may include bounding boxes or polygons."
      }
    },
